	// "editor.fontFamily": "DejaVu Sans Mono",
	// "editor.fontFamily": "Fantasque Sans Mono",	//https://github.com/belluzj/fantasque-sans/
	// "editor.fontFamily": "Comic Mono", // https://dtinth.github.io/comic-mono-font/
	// "editor.fontFamily": "Comic Shanns",
